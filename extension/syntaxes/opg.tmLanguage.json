{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "OPGrammar",
	"folding": {
		"code": {
			"start": "{{",
			"end": "}}"
		},
		"production": {
			"start": ":",
			"end": ";"
		}
	},
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#operators"
		},
		{
			"include": "#grammar"
		},
		{
			"include": "#production"
		},
		{
			"include": "#assignment"
		},
		{
			"include": "#codeblock"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.opg",
					"match": "\\b(if|while|for|return)\\b"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.opg",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.opg",
					"match": "\\\\."
				}
			]
		},
		"operators": {
			"patterns": [
				{
					"name": "keyword.control",
					"match": "(%|\\*|/|\\||-|\\+|\\?)"
				},
				{
					"name": "keyword.operator.assignment.opg",
					"match": ":"
				}
			]
		},
		"grammar": {
			"match": "\\b(grammar)\\s+([a-zA-Z_][a-zA-Z_0-9]*)",
			"captures": {
				"1": {
					"name": "keyword.control.opg"
				},
				"2": {
					"name": "keyword.identifier.opg"
				}
			}
		},
		"production": {
			"begin": "([a-zA-Z_][a-zA-Z_0-9]*)\\s*(:)",
			"end": "(;)",
			"beginCaptures": {
				"1": {
					"name": "support.type"
				},
				"2": {
					"name": "support.class"
				}
			},
			"endCaptures": {
				"1": {
					"name": "support.class"
				}
			},
			"patterns": [
				{
					"include": "#rule-list"
				}
			]
		},
		"assignment": {
			"patterns": [
				{
					"match": "([a-zA-Z_][a-zA-Z_0-9]*)\\s*=",
					"captures": {
						"1": {
							"name": "support.variable"
						}
					}
				}
			]
		},
		"codeblock": {
			"begin": "({{)",
			"end": "(}})",
			"beginCaptures": {
				"1": {
					"name": "keyword.operator.new"
				}
			},
			"endCaptures": {
				"1": {
					"name": "keyword.operator.new"
				}
			},
			"patterns": [
				{
					"include": "source.js"
				}
			]
		},
		"rule-list": {
			"patterns": [
				{
					"include": "#strings"
				},
				{
					"include": "#operators"
				},
				{
					"include": "#codeblock"
				},
				{
					"include": "#assignment"
				}
			]
		}
	},
	"scopeName": "source.opg"
}